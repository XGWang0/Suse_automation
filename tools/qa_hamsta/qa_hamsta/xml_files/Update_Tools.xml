<?xml version="1.0"?>
<job>
    <config>
        <name>Update Tools</name>
        <debuglevel>3</debuglevel>
        <distributable>0</distributable>
        <parallel>0</parallel>
        <mail notify="1"></mail>
	<rpm></rpm>
        <logdir>/tmp</logdir>
        <description>Update the tools.</description>
        <motd>[Custom job]: </motd>
    </config>

    <commands>
        <worker>
            <!-- Required -->
            <command execution="forked">
repo=`zypper lr -u | grep "http://dist.suse.de/ibs/QA:/"  | awk '{print $1;}'`
zypper ref -r $repo
zypper --non-interactive up --auto-agree-with-licenses -r $repo
rchamsta restart
</command>
            <!-- Optional -->
            <directory>/</directory>
            <timeout>300000</timeout>
        </worker>
    </commands>
</job>
