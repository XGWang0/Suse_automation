<?xml version="1.0"?>
<job>
    <config>
        <name>reinstall from REPOURL</name>
        <debuglevel>4</debuglevel>
        <distributable>0</distributable>
        <parallel>0</parallel>
        <mail notify="1"></mail>
        <logdir>/tmp</logdir>
        <rpm>qa_hamsta</rpm>
        <rpmi upgrade="1">qa_tools qa_lib_perl</rpm>
        <description>Reinstalls the machine from REPOURL</description>
        <motd>Machine being reinstalled</motd>
    </config>

    <commands>
        <worker>
            <!-- Required -->
            <command execution="threaded">/usr/share/qa/tools/install.pl ARGS</command>
            <!-- Optional -->
            <directory>/</directory>
            <timeout>120</timeout>
        </worker>
    </commands>
</job>
