<?xml version="1.0"?>
<job>
    <config>
        <name>New virtual machine from REPOURL</name>
        <debuglevel>4</debuglevel>
        <distributable>0</distributable>
        <parallel>0</parallel>
        <mail notify="1"></mail>
        <logdir>/tmp</logdir>
        <rpm>qa_hamsta qa_tools qa_lib_perl qa_lib_virtauto</rpm>
        <description>Installs new virtualmachine from REPOURL</description>
        <reboot>0</reboot>
    </config>

    <commands>
        <worker>
            <!-- Required -->
            <command execution="threaded">/usr/share/qa/tools/winvm.pl ARGS</command>
            <!-- Optional -->
            <directory>/</directory>
            <timeout>7200</timeout>
        </worker>
    </commands>
</job>
