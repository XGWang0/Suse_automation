<?xml version="1.0"?>
<job>
  <config>
    <name>Virtual machine migration to specified remote IP host</name>
    <debuglevel>4</debuglevel>
    <description>Migrate virtual machine with given domain name to remote host with given IP</description>
    <mail notify="1"></mail>
    <rpm>qa_hamsta qa_tools qa_lib_perl qa_lib_virtauto</rpm>
  </config>
  <parts>
    <part name="default" id="1" />
  </parts>
  <roles>
    <role name="default">
      <commands part_id="1">
        <worker>
          <command execution="threaded" reboot="0"><![CDATA[/usr/share/qa/tools/vm-migrate-allhosttype.pl ARGS]]></command>
        </worker>
      </commands>
    </role>
  </roles>
</job>
