<?xml version="1.0"?>
<job>
  <config>
    <name>reboot</name>
    <debuglevel>4</debuglevel>
    <description>Immediate reboot</description>
    <mail notify="0">vmarsik@suse.cz</mail>
  </config>
  <parts>
    <part name="default" id="1" />
  </parts>
  <roles>
    <role name="default">
      <commands part_id="1">
        <worker>
          <command execution="threaded" reboot="1"><![CDATA[/sbin/reboot]]></command>
        </worker>
      </commands>
    </role>
  </roles>
</job>
