<?xml version="1.0"?>
<job>
    <config>
        <name>reboot</name>
        <debuglevel>4</debuglevel>
        <distributable>0</distributable>
        <parallel>0</parallel>
        <mail notify="0">vmarsik@suse.cz</mail>
        <logdir>/tmp</logdir>
        <description>Immediate reboot</description>
    </config>

    <commands>
        <worker>
            <!-- Required -->
            <command execution="threaded">/sbin/reboot</command>
        </worker>
    </commands>
</job>
