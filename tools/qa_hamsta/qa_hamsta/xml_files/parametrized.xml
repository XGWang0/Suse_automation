<?xml version="1.0"?>
<job>
    <config>
        <name>Parametrized Job</name>
        <debuglevel>4</debuglevel>
        <distributable>0</distributable>
        <parallel>0</parallel>
        <mail notify="1"></mail>        
        <logdir>/tmp</logdir>
        <description>[SLES] Test all packages, kernel and regression</description>
        <motd>Be careful, this computer is used for full test. Include kernel and regression test!</motd>
        <reboot>0</reboot>
    </config>
    <parameters>
 	<parameter type="string" name="broadcast_ip" default="10.20.3.0" label="Broadcast IP address"/>
  	<parameter type="enum" name="filesystem" default="ReiserFS filesystem">
    		<option value="reiserfs">ReiserFS filesystem</option>
    		<option value="ext3">Ext3 filesystem</option>
    	</parameter>
    	<parameter type="textarea" name="mails" label="Notification mailing list"><![CDATA[
    		<testuser@novell.com>
    		testuser@suse.com
    		root@suse.cz
    	]]>
    	</parameter>
    	<parameter type="string" name="slave_ip" default="10.20.3.100" label="Slave IP address"/>
    	<parameter type="enum" name="runlevel" default="Level 3">
    		<option value="1">Level 1</option>
    		<option value="2">Level 2</option>
    		<option value="3">Level 3</option>
    		<option value="4">Level 4</option>
    		<option value="5">Level 5</option>
    	</parameter>
    </parameters>
    <commands>
        <worker>
            <!-- Required -->
            <command execution="forked">#!/bin/bash
		    echo hello $param_broadcast_ip $param_filesystem $param_slave_ip
	    </command>
	    <!-- Optional -->
            <directory>/</directory>
            <timeout>300000</timeout>
        </worker>
    </commands>
</job>
