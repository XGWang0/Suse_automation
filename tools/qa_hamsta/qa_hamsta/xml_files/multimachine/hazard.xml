			/usr/lib/hazard/hazard_run.sh -t 24 -c8 `echo $ROLE_1_IP|sed "s/,/ /g"`
           </command>
        <command execution="forked" role_id="1">#!/bin/bash
        </command>
	   <directory>/var/log/ctcs2</directory>
     </worker>
    </commands>
