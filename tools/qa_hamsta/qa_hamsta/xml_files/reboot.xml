<?xml version="1.0"?>
<job>
    <config>
        <name>Reboot</name>
        <debuglevel>4</debuglevel>
        <distributable>0</distributable>
        <parallel>0</parallel>
        <mail notify="1"></mail>
	<rpm>qa_hamsta</rpm>
        <logdir>/tmp</logdir>
        <description>Reboot SUT</description>
    </config>

    <commands>
        <worker>
            <!-- Required -->
            <command execution="forked">
#!/bin/bash
reboot
</command>
            <!-- Optional -->
            <directory>/</directory>
            <timeout>300000</timeout>
        </worker>
    </commands>
</job>
