# configuration for automated KOTD tests

# architecture : x86 | x86_64 | ...
# default: autodetected by `uname -m`
# cmdline option: -a

#arch="x86_64"


# branch : master | SLES10_SP4_BRANCH | ...
# default: master
# cmdline option: -b

#branch="master"


# run as daemon ? 0 | 1
# default: 0
# cmdline option: -d

#daemon="0"


# use the *-base-*.rpm file ?
# default: true for SLE-11, false otherwise
# cmdline option: -e

#use_base="0"


# flavor: default | debug | vanilla | ...
# default: default
# cmdline option: -f

#flavor="default"


# repository poll interval in secs
# default: 60
# cmdline option: -i

#poll_int="60"


# log file
# default: /var/log/qa_kerneltest.log
# cmdline option: -l

#logfile="/var/log/qa_kerneltest.log"


# maximal number of kernels kept installed
# default: 3
# cmdline option: -m

#max_kernels="3"


# product for QADB submit
# default: autodetected by `/usr/share/qa/tools/product.pl`
# cmdline option: -p

#qadb_product="SLES-10-SP4"


# directory with control files
# default: /var/lib/kerneltest
# cmdline option: -r

#vardir="/var/lib/kerneltest"


# how many seconfs to sleep before first command
# default: 60
# cmdline option: -s

#sleep="60"


# tester name for QADB submit
# default: kotd-default
# cmdline option: -t

#tester="kotd-default"


# repository URL with kernel commit builds
# default: http://dist.suse.de/kerneltest
# cmdline option: -u

#kcmt_url="http://dist.suse.de/kerneltest"


# loglevel
# default: 5 (LOG_DETAIL)
#	LOG_CRITICAL    => 0,
#	LOG_ERROR       => 1,
#	LOG_WARNING     => 2,
#	LOG_NOTICE      => 3,
#	LOG_INFO        => 4,
#	LOG_DETAIL      => 5,
#	LOG_DEBUG       => 6,
# cmdline option: -v

#loglevel="5"




# ignore the command queue ? For debugging only.
# default: 0
# cmdline option: -C

#nocommands="0"


# disable QADB reports ?
# default: 0
# cmdline option: -Q

#noqadb="0"


# disable rebooting ?
# default: 0
# cmdline option: -R

#noreboot="0"
